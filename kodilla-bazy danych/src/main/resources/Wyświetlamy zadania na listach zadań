SELECT ISSUES.SUMMARY, ISSUES.DESCRIPTION, ISSUESLISTS.NAME
FROM ISSUES ISSUES
JOIN ISSUESLISTS ISSUESLISTS ON ISSUES.ISSUELIST_ID = ISSUESLISTS.ID;


SELECT ISSUES.SUMMARY, ISSUES.DESCRIPTION, USERS.FIRSTNAME, USERS.LASTNAME
FROM ISSUES ISSUES
JOIN USERS USERS ON ISSUES.ISSUELIST_ID = USERS.ID;


SELECT USERS.FIRSTNAME, USERS.LASTNAME, COUNT(*) AS TASK_NUMBER
FROM USERS USERS
JOIN ISSUES ISSUES ON USERS.ID = ISSUES.USER_ID_ASSIGNETEDTO
GROUP BY USER_ID_ASSIGNETEDTO;